# Filesystem aliases
alias ..='cd ..'
alias ...='cd ../..'
alias l='ls -lah'
alias la='ls -AF'
alias ll='ls -lFh'
alias lld='ls -l | grep ^d'
alias rmf='rm -rf'

# Helpers
alias grep='grep --color=auto'
alias df='df -h' # disk free, in Gigabytes, not bytes
alias du='du -h -c' # calculate disk usage for a folder

# git aliases
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gl='git pull'
alias gp='git push'
alias gst='git s'
alias gs='git stash save'
alias gsp='git stash pop'
alias gmv='git mv'
alias grm='git rm'
